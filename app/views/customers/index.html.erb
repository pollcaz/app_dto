<div class="page-header">
  <h1>PROPIETARIOS</h1>
</div>

<div id="buscar">
    <%= form_tag customers_path, :class => "well form-search", :method => 'get' do %>
      <p>
        Direcci√≥n: 
        <%= text_field_tag :search, params[:search], :class => 'span5' %>
        <%= submit_tag "Buscar", :name => nil %>
      </p>
    <% end %>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Id</th>
      <th>Codigo</th>
      <th>Sector</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @customers %>
  </tbody>
</table>

<%= link_to 'Nuevo', new_customer_path, :class => 'btn btn-primary' %>

<div class="pagination">
   <ul>
     <%= will_paginate @customers, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;'  %>
   </ul>
</div>

<p>
  Total Clientes : <%= @customers.count %>
</p>

